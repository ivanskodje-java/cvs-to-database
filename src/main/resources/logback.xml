<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <property name="LOG_ROOT_PATH" value="logs"/>
    <property name="LOG_FILE_NAME" value="cvs-to-database"/>


    <springProfile name="dev">
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <appender name="BATCH_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_ROOT_PATH}/${LOG_FILE_NAME}.batch.log</file>
            <encoder>
                <pattern>%d|BATCH|%logger{0}|%msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_ROOT_PATH}/archive/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.batch.log</fileNamePattern>
                <maxFileSize>200MB</maxFileSize>
                <maxHistory>10</maxHistory>
            </rollingPolicy>
        </appender>


        <logger name="org.springframework.batch.core" level="INFO">
            <appender-ref ref="BATCH_FILE"/>
        </logger>

        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_ROOT_PATH}/${LOG_FILE_NAME}.error.log</file>
            <encoder>
                <pattern>%d|ERROR|%logger{0}|%msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_ROOT_PATH}/archive/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.error.log</fileNamePattern>
                <maxFileSize>200MB</maxFileSize>
                <maxHistory>10</maxHistory>
            </rollingPolicy>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
        </appender>
    </springProfile>
</configuration>
